<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
  <system.runtime.remoting>
    <aplication name ="Server">
      <service>
        <wellknown
          mode="Singleton"
          type="Pedido, Pedidos"
          objectUri="Pedidos"/>
      </service>
      <channels>
        <channel ref="tcp" port="9000">
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full"/>
          </serverProviders>
        </channel>
      </channels>
    </aplication>
  </system.runtime.remoting>
</configuration>
